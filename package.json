{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "pillage-first",
  "version": "0.0.16",
  "private": true,
  "type": "module",
  "license": "AGPL-3.0-or-later",
  "author": "Jure Rotar <hello@jurerotar.com>",
  "repository": "github:jurerotar/Pillage-First-Ask-Questions-Later",
  "bugs": "https://github.com/jurerotar/Pillage-First-Ask-Questions-Later/issues",
  "packageManager": "npm@11.7.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:dev": "turbo run build:dev",
    "start": "turbo run start",
    "lint:check": "turbo run lint:check",
    "lint": "turbo run lint",
    "format:check": "turbo run format:check",
    "format": "turbo run format",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "prepare": "lefthook install",
    "postinstall": "node scripts/extract-sql-schema.ts && node scripts/postinstall.ts",
    "extract-sql-schema": "node scripts/extract-sql-schema.ts",
    "extract-sql-usage": "node scripts/extract-sql-usage.ts",
    "extract-sql-seeder-usage": "node scripts/extract-sql-seeder-usage.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@commitlint/cli": "20.3.0",
    "@commitlint/config-conventional": "20.3.0",
    "@sqlite.org/sqlite-wasm": "3.50.4-build1",
    "@typescript/native-preview": "7.0.0-dev.20260105.1",
    "lefthook": "2.0.13",
    "oxlint": "1.38.0",
    "oxlint-tsgolint": "0.10.1",
    "turbo": "2.7.3",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=24.12.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0
      ],
      "body-max-line-length": [
        0
      ]
    }
  }
}
