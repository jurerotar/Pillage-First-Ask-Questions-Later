{
  "name": "pillage-first-ask-questions-later",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "author": "Jure Rotar <hello@jurerotar.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/jurerotar/Pillage-First-Ask-Questions-Later.git"
  },
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "start": "react-router-serve ./build/server/index.js",
    "lint:check": "npx @biomejs/biome lint",
    "lint": "npx @biomejs/biome lint --fix",
    "format:check": "npx @biomejs/biome format",
    "format": "npx @biomejs/biome format --write",
    "knip:ci": "npx knip --max-issues 29",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "prepare": "husky",
    "analyze-graph": "npx skott ./app/index.tsx --trackThirdPartyDependencies --trackBuiltinDependencies --trackTypeOnlyDependencies",
    "analyze-bundle": "npx vite-bundle-visualizer",
    "postinstall": "cpy 'node_modules/@pillage-first/graphics/dist/graphic-packs/**/*.{jpg,png,avif}' ./public/graphic-packs --parents"
  },
  "dependencies": {
    "@pillage-first/graphics": "0.0.1",
    "@react-router/node": "7.1.1",
    "@react-router/serve": "7.1.1",
    "@tanstack/react-query": "5.63.0",
    "@tanstack/react-query-devtools": "5.63.0",
    "@tanstack/react-query-persist-client": "5.63.0",
    "clsx": "2.1.1",
    "cpy-cli": "5.0.0",
    "dayjs": "1.11.13",
    "i18next": "24.2.1",
    "isbot": "5.1.21",
    "moderndash": "4.0.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.54.2",
    "react-i18next": "15.4.0",
    "react-icons": "5.4.0",
    "react-icons-tailwindcss": "1.1.0",
    "react-router": "7.1.1",
    "react-tabs": "6.1.0",
    "react-tooltip": "5.28.0",
    "react-window": "1.8.11",
    "ts-seedrandom": "1.0.0",
    "usehooks-ts": "3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@react-router/dev": "^7.1.1",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "22.10.5",
    "@types/react": "19.0.4",
    "@types/react-dom": "19.0.2",
    "@types/react-window": "1.8.8",
    "@vitest/web-worker": "2.1.8",
    "autoprefixer": "10.4.20",
    "happy-dom": "16.5.2",
    "husky": "9.1.7",
    "knip": "5.41.1",
    "opfs-mock": "1.0.0",
    "postcss": "8.4.49",
    "resize-observer-polyfill": "1.5.1",
    "rollup-plugin-visualizer": "5.14.0",
    "sass-embedded": "1.83.1",
    "skott": "0.35.4",
    "tailwindcss": "3.4.17",
    "typescript": "5.7.3",
    "vite": "6.0.7",
    "vite-bundle-visualizer": "1.2.1",
    "vite-plugin-pwa": "0.21.1",
    "vitest": "2.1.8"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  },
  "knip": {
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "entry": ["app/index.tsx"],
    "project": ["app/**/*.{ts,tsx}"],
    "paths": {
      "app/*": ["app/*"]
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "overrides": {
    "usehooks-ts": {
      "react": "^19"
    }
  }
}
