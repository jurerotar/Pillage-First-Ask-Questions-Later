      "default": "./src/game/calculate-current-resources.ts"
    },
    "./guards/effect": {
      "default": "./src/guards/effect-guards.ts"
    },
    "./guards/event": {
      "default": "./src/guards/event-guards.ts"
    },
    "./guards/quest": {
      "default": "./src/guards/quest-guards.ts"
    }
  },
  "scripts": {
