{
  "name": "pillage-first-ask-questions-later",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/jurerotar/Pillage-First-Ask-Questions-Later.git"
  },
  "type": "module",
  "author": "Jure Rotar <hello@jurerotar.com",
  "scripts": {
    "dev": "vite",
    "build": "vite build --emptyOutDir",
    "serve": "vite preview",
    "lint:check": "npx @biomejs/biome lint",
    "lint": "npx @biomejs/biome lint --fix",
    "format:check": "npx @biomejs/biome format",
    "format": "npx @biomejs/biome format --write",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "prepare": "husky",
    "analyze-bundle": "npx vite-bundle-visualizer",
    "postinstall": "cpy 'node_modules/@pillage-first/graphics/dist/graphic-packs/**/*.{jpg,png,avif}' ./public/graphic-packs --parents"
  },
  "dependencies": {
    "@pillage-first/graphics": "0.0.0",
    "@tanstack/react-query": "5.59.13",
    "@tanstack/react-query-devtools": "5.59.13",
    "@tanstack/react-query-persist-client": "5.59.13",
    "clsx": "2.1.1",
    "cpy-cli": "5.0.0",
    "dayjs": "1.11.13",
    "i18next": "23.15.2",
    "moderndash": "3.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.53.0",
    "react-i18next": "15.0.3",
    "react-icons": "5.3.0",
    "react-modal": "3.16.1",
    "react-router-dom": "6.27.0",
    "react-tabs": "6.0.2",
    "react-tooltip": "5.28.0",
    "react-window": "1.8.10",
    "ts-seedrandom": "1.0.0",
    "usehooks-ts": "3.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.0.1",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "22.7.5",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "@types/react-modal": "3.16.3",
    "@types/react-window": "1.8.8",
    "@vitejs/plugin-react": "4.3.2",
    "@vitest/web-worker": "2.1.2",
    "autoprefixer": "10.4.20",
    "happy-dom": "15.7.4",
    "husky": "9.1.6",
    "knip": "5.33.3",
    "lint-staged": "15.2.10",
    "opfs-mock": "1.0.0",
    "postcss": "8.4.47",
    "resize-observer-polyfill": "1.5.1",
    "rollup-plugin-visualizer": "5.12.0",
    "sass-embedded": "1.79.5",
    "tailwindcss": "3.4.13",
    "typescript": "5.6.3",
    "vite": "5.4.8",
    "vite-bundle-visualizer": "1.2.1",
    "vite-plugin-pwa": "0.20.5",
    "vitest": "2.1.2"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": ["npm run lint:check", "npm run format:check", "npm run lint", "npm run format"]
  },
  "knip": {
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "entry": ["app/index.tsx"],
    "project": ["app/**/*.{ts,tsx}"],
    "paths": {
      "app/*": ["app/*"]
    }
  }
}
