{
  "name": "pillage-first-ask-questions-later",
  "version": "0.0.16",
  "private": true,
  "type": "module",
  "author": "Jure Rotar <hello@jurerotar.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jurerotar/Pillage-First-Ask-Questions-Later.git"
  },
  "bugs": {
    "url": "https://github.com/jurerotar/Pillage-First-Ask-Questions-Later/issues"
  },
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "build:dev": "react-router build --mode development",
    "start": "react-router-serve ./build/server/index.js",
    "lint:check": "npx @biomejs/biome lint --no-errors-on-unmatched",
    "lint": "npx @biomejs/biome lint --fix --no-errors-on-unmatched",
    "format:check": "npx @biomejs/biome format --no-errors-on-unmatched",
    "format": "npx @biomejs/biome format --write --no-errors-on-unmatched",
    "knip:ci": "npx knip --max-issues 29",
    "localize": "npx i18next-cli extract",
    "localize:ci": "npx i18next-cli extract --ci --dry-run",
    "type-check": "react-router typegen && tsgo",
    "test": "vitest",
    "prepare": "husky",
    "postinstall": "node scripts/postinstall.ts && node scripts/create-dev-db.ts",
    "create-dev-db": "node scripts/create-dev-db.ts"
  },
  "dependencies": {
    "@grafana/faro-web-sdk": "1.19.0",
    "@hookform/resolvers": "5.2.2",
    "@pillage-first/graphics": "0.0.9",
    "@react-router/node": "7.9.6",
    "@react-router/serve": "7.9.6",
    "@sqlite.org/sqlite-wasm": "3.51.1-build1",
    "@tailwindcss/vite": "4.1.17",
    "@tanstack/react-query": "5.90.8",
    "@tanstack/react-query-devtools": "5.90.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "i18next": "25.6.2",
    "isbot": "5.1.32",
    "moderndash": "4.0.0",
    "path-to-regexp": "8.3.0",
    "radix-ui": "1.4.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "7.66.0",
    "react-i18next": "16.3.3",
    "react-icons": "5.5.0",
    "react-icons-sprite": "0.4.0",
    "react-router": "7.9.6",
    "react-tabs": "6.1.0",
    "react-tooltip": "5.30.0",
    "react-window": "1.8.11",
    "sonner": "2.0.7",
    "ts-seedrandom": "1.4.0",
    "usehooks-ts": "3.1.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@react-router/dev": "7.9.6",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.10.1",
    "@types/react": "19.2.4",
    "@types/react-dom": "19.2.3",
    "@types/react-window": "1.8.8",
    "@vitest/coverage-v8": "4.0.8",
    "@typescript/native-preview": "7.0.0-dev.20251113.1",
    "cheerio": "1.1.2",
    "happy-dom": "20.0.10",
    "husky": "9.1.7",
    "i18next-cli": "1.24.5",
    "knip": "5.69.1",
    "rolldown-vite": "7.2.5",
    "rollup-plugin-visualizer": "6.0.5",
    "sass": "1.94.0",
    "sass-embedded": "1.93.3",
    "tailwindcss": "4.1.17",
    "typescript": "5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-devtools-json": "1.0.0",
    "vite-plugin-pwa": "1.1.0",
    "vitest": "4.0.8"
  },
  "engines": {
    "node": ">=22.20.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "knip": {
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "entry": [
      "scripts/*.ts",
      "app/**/*page.tsx!",
      "app/**/*layout.tsx!"
    ],
    "project": [
      "app/**/*.{ts,tsx}!"
    ],
    "paths": {
      "app/*": [
        "app/*"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0
      ],
      "body-max-line-length": [
        0
      ]
    }
  }
}
